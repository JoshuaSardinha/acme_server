{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@test/(.*)$": "<rootDir>/test/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/test/utils/jest-setup.ts"],
  "testTimeout": 60000,
  "maxWorkers": 1
}